extends .././templates/default

block content
  br
  br
  br
  .panel.panel-default
   .panel-heading
     h2.panel-title Sistema de Gestión 
        small Nueva Imagen Médica
     
    div(class='form-group')
   form(method="POST", enctype="multipart/form-data", action="http://localhost:3000/users/save")
     div(class='row')
        div(class='col-md-2 col-md-offset-1')
         div(class='form-group has-success')
          label(for='selectpicker1') Paciente
          select( class="selectpicker" data-style="btn-default" name="selectpicker1" multiple title='Escoger Paciente')
            -each item in names
              option #{item.name}
         div(class='form-group has-success')
          label(for='tipovista') Tipo de Vista
          input(type="text", name="tipovista" class='form-control')
         div(class='form-group has-success')
          label(for='area') Área
          input(type="text", name="area" class='form-control') 
         div(class='form-group has-success')
          label(for='tecnica') Técnica de Escaneo
          input(type="text", name="tecnica" class='form-control')
         div(class='form-group has-success')
          label(for='procedimiento') Procedimiento
          input(type="text", name="procedimiento" class='form-control')
         div(class='form-group has-success')
          label(for='enfoque') Enfoque
          input(type="text", name="enfoque" class='form-control')
         div(class='form-group has-success')
           label(for='observaciones') OBSERVACIONES:
           input(type="textarea",id='observaciones', name="observaciones" class='form-control')
           
        div(class='col-md-4 col-md-offset-2')
         div(class='form-group has-success')
           input(type="file", name="archivo", value="Cargar Imagen" class="btn btn-primary btn-file")
         div(class='form-group has-success')
           input(type="submit" value="Enviar Datos" class="btn btn-primary") 
         div(class="item")
           if img
            img(src="../uploads/upload_"+img alt="Chicago" width="500" height="400")
           if !img
            img(src="" alt="" width="500" height="400")
  p.footer 
        div(class="contadadorpie")
          p
           | Todos los derechos reservados
           br
           | UNIVERSIDAD CENTRAL DEL ECUADOR 



   