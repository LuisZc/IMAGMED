extends .././templates/default

block content
  br
  br
  br
  .panel.panel-default
   .panel-heading
     h2.panel-title Sistema de Gestión 
        small Nueva Imagen Médica
     
    div(class='form-group')
   form(method="POST", enctype="multipart/form-data", action="http://localhost:3000/users/save")
     div(class='row')
        div(class='col-md-2 col-md-offset-1')
         div(class='form-group has-success')
          label(for='selectpicker1') Paciente
          select( class="selectpicker" data-style="btn-default" name="selectpicker1" title='Escoger Paciente')
            -each item in names
              option #{item.name}
         div(class='form-group has-success')
          label(for='tipovista') Tipo de Vista
          select( class="selectpicker" data-style="btn-default" name="tipovista" title='Escoger el Tipo de Vista')
            -each item in typesVw
              option #{item.typevw}
         div(class='form-group has-success')
          label(for='area') Área
          select( class="selectpicker" data-style="btn-default" name="area" title='Escoger el Area') 
            -each item in typesAr
              option #{item.typear}
         div(class='form-group has-success')
          label(for='tecnica') Técnica de Escaneo
          select( class="selectpicker" data-style="btn-default" name="tecnica" title='Escoger la Técnica de Escaneo') 
            -each item in typesTh
              option #{item.typeth}
         div(class='form-group has-success')
          label(for='procedimiento') Procedimiento
          select( class="selectpicker" data-style="btn-default" name="procedimiento" title='Escoger la Técnica de Escaneo') 
            -each item in typesPr
              option #{item.typepr}
         div(class='form-group has-success')
          label(for='enfoque') Enfoque
          input(type="text", name="enfoque" class='form-control')
         div(class='form-group has-success')
           label(for='observaciones') OBSERVACIONES:
           textarea(cols="40", rows="10", name="observaciones", id="observaciones")
        div(class='col-md-4 col-md-offset-2')
         div(class='form-group has-success')
           input(type="file", name="archivo", value="Cargar Imagen" class="btn btn-primary btn-file")
         div(class='form-group has-success')
           input(type="submit" value="Enviar Datos" class="btn btn-primary") 
         div(class="item")
           if img
            img(src="../uploads/upload_"+img  width="500" height="400")
           if !img
            img(src="" alt="" width="500" height="400")
  .container

