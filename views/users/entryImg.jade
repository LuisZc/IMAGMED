extends .././templates/default

block content
 div(class='panel panel-default')
  br
  br
 .panel.panel-default
      .panel-heading
        h1.panel-title Imagenes Médicas 
        p.right= 'Paciente'
   div(class='form-group')
  form(method="POST", enctype="multipart/form-data", action="http://localhost:3000/users/save")
    div(class='row')
       div(class='col-md-1 col-md-offset-1')
        div(class='form-group')
         select( class="selectpicker" data-style="btn-info" name="selectpicker1")
          option(value='Paciente 1') Paciente 1
          option(value='Paciente 2') Paciente 2
          option(value='Paciente 3') Paciente 3
          option(value='Paciente 4') Paciente 4
          option(value='Paciente 5') Paciente 5
          option(value='Paciente 6') Paciente 5
        div(class='form-group')
          label(for='tipovista') TIPO DE VISTA
          input(type="text", name="tipovista")
        div(class='form-group')
          label(for='area') ÁREA
          input(type="text", name="area") 
        div(class='form-group')
          label(for='tecnica') TECNICA DE ESCANEO
          input(type="text", name="tecnica")
        div(class='form-group')
          label(for='procedimiento') PROCEDIMIENTO
          input(type="text", name="procedimiento")
        div(class='form-group')
          label(for='enfoque') ENFOQUE
          input(type="text", name="enfoque")
        div(class='form-group')
          label(for='observaciones') OBSERVACIONES
          input(type="text", name="observaciones")
       div(class='col-md-3 col-md-offset-3')
        div(class='form-group')
          input(type="file", name="archivo", value="Cargar Imagen")
        div(class='form-group')
          input(type="submit" value="Enviar Datos") 
  
        div(class="item")
          if img
           img(src="../uploads/upload_"+img alt="Chicago" width="500" height="400")
          if !img
           img(src="" alt="" width="500" height="400")
    br
    p.footer
         div(class="contadadorpie")
            p
            | Todos los derechos reservados
            br
            | UNIVERSIDAD CENTRAL DEL ECUADOR



   