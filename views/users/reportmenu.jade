 .panel.panel-default
      .panel-heading
        h2.panel-title SISTEMA DE GESTIÓN
           small   REPORTES
  div(class="row")
    div(class='col-md-6 col-md-offset-3')
      div(class="panel panel-info") 
          div(class='panel-heading')
            h2.panel-title Filtros 
           div(class='panel-body') 
            div(class='panel panel-primary')
             div(class='panel-heading')
               h4.panel-title 
                 a(data-toggle='collapse', href='#collapse1') Reporte de Imágenes por Paciente
              #collapse1.panel-collapse.collapse 
              form(method="POST", enctype="multipart/form-data", action="rspPaciente")
                div(class='form-group')
                 
                 label.col-md-2.control-label(for="selectpickerPaciente") Pacientes

                 select(class="selectpicker show-tick" name="selectpickerPaciente" title='Escoger Paciente')
                  -each item in names

                   option(data-icon='glyphicon-user') #{item.name}
                div(class='form-group') 
                 .col-md-2
                 input(type="submit" value="Generar" class='btn btn-info') 
            div(class='panel panel-primary')
             div(class='panel-heading')
               h4.panel-title 
                 a(data-toggle='collapse', href='#collapse2') Reporte de Imágenes por Características
              #collapse2.panel-collapse.collapse
              form(method="POST", enctype="multipart/form-data", action="/rspImgCrt") 
                div(class='form-group')
                 label.col-md-2.control-label(for="selectpickerCrts") Características
                 select(class="selectpicker show-tick" data-width="auto" name="selectpickerCrts" title='Características')
                  option AREA
                  option PROCEDIMIENTO
                  option TECNICA
                div(class='form-group')
                 .col-md-2    
                 input(type="submit" value="Generar" class='btn btn-info') 
            div(class='panel panel-primary')
             div(class='panel-heading')
               h4.panel-title 
                 a(data-toggle='collapse', href='#collapse3') Reporte Imágenes - Doctores
              #collapse3.panel-collapse.collapse 
                div(class='form-group')
                
                label(for="RptImgDr") Reporte Imágenes Doctores
                form(method="GET", enctype="multipart/form-data", action="rspOne")
                 input(type="submit" value="Generar" class='btn btn-info') 

            
            div(class='panel panel-primary')
             div(class='panel-heading')
               h4.panel-title 
                 a(data-toggle='collapse', href='#collapse5') Lista de Doctores
              #collapse5.panel-collapse.collapse 
                div(class='form-group')
                
                label(for="RptImgDr") Lista de Doctores
                form(method="GET", enctype="multipart/form-data", action="rsptoDr")
                 input(type="submit" value="Generar" class='btn btn-info') 
